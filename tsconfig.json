{
	"compilerOptions": {
		"module": "NodeNext",
		"lib": ["es2015"],
		"target": "es2015",
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "NodeNext",
		"sourceRoot": "./src",
		"types": ["node"],
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"removeComments": false,
		"inlineSources": true,
		"inlineSourceMap": false,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true
	},
	"typedocOptions": {
		"entryPoints": ["src/index.ts"],
		"out": "docs"
	},
	"include": ["src/"],
	"exclude": ["test/", "dist/", "node_modules/"],
	"ts-node": {
		"esm": true
	}
}
